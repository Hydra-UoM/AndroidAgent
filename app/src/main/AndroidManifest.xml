<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uom.cse.androidagent" >
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-sdk
        android:minSdkVersion="16"></uses-sdk>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/agent_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".main.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".popups.RegisterDevicePop"
            android:theme="@style/AppTheme.RegisterDevicePopTheme"
            ></activity>
        <service android:name=".main.AgentService"/>


    </application>

</manifest>
